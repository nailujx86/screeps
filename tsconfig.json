{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["esnext"],
        "target": "ES6",
        "moduleResolution": "Node",
        "outDir": "dist",
        "baseUrl": "src/",
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules"
    ]
}